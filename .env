# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-here

# Email Configuration for Password Reset
# Choose your email provider settings:

# === OUTLOOK SETUP (Active Configuration) ===
SMTP_SERVER=smtp-mail.outlook.com
SMTP_PORT=587
SENDER_EMAIL=your-email@outlook.com
SENDER_PASSWORD=your-outlook-password

# === GMAIL SETUP (Alternative) ===
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SENDER_EMAIL=your-email@gmail.com
# SENDER_PASSWORD=your-app-password

# === COMPANY EMAIL (if you have SMTP details) ===
# SMTP_SERVER=mail.intertrustgroup.com
# SMTP_PORT=587
# SENDER_EMAIL=your-email@intertrustgroup.com
# SENDER_PASSWORD=your-password

# Azure AD SSO (Optional)
ENABLE_AZURE_SSO=False
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Global Editor Password
EDITOR_PASSWORD=your-global-admin-password